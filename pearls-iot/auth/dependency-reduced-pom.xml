      </properties>
    </profile>
    <profile>
      <id>jdk-1.8.0_101</id>
      <properties>
        <alpn-boot.version>8.1.9.v20160720</alpn-boot.version>
      </properties>
    </profile>
    <profile>
      <id>jdk-1.8.0_102</id>
      <properties>
        <alpn-boot.version>8.1.9.v20160720</alpn-boot.version>
      </properties>
    </profile>
    <profile>
      <id>jdk-1.8.0_111</id>
      <properties>
        <alpn-boot.version>8.1.9.v20160720</alpn-boot.version>
